{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Archive Manifest",
  "type": "object",
  "required": ["id", "files", "captured_at", "license"],
  "properties": {
    "id": { "type": "string" },
    "recorded_date": { "type": "string" },
    "captured_at": { "type": "string" },
    "license": { "type": "string" },
    "tools": { "type": "array", "items": { "type": "string" } },
    "source_urls": { "type": "array", "items": { "type": "string" } },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        }
      }
    }
  }
}
